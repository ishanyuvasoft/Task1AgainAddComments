<h2>Product Index</h2>

<ul>

  <% @products.each do |product| %>

    <li>
      <%= product.id %>
      <%= product.name %>
      <%= product.price %>
      <%= link_to "comment",new_user_product_comment_path(current_user.id,product.id)%>
     
     <% if current_user.has_role? :seller %>
      <%= link_to "Destroy", user_product_path(current_user.id,product.id), method: :delete, data: { confirm: "Are you sure?" } %>
     <%end%>
     <%end%>
    </li>
    <%= link_to "Back", root_path(@user) %>
